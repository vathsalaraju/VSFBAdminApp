@page "/AddCustomer"

<h3>Create New Customer</h3>

<div class = "container">
<div class = "col-10 row">
    
    <EditForm Model = "@customer" OnSubmit="CreateCustomerData">
        
        <div class = "form-group row">
            <label for = "CustomerId" class = "col-sm-6">Customer Id</label>
            <InputText id = "CustomerId" class = "form-control" @bind-Value = "@customer.CustomerId" ></InputText>
        </div>
         <div class = "form-group row">
            <label for = "FirstName" class = "col-sm-6">First Name</label>
            <InputText id = "FirstName" class = "form-control" @bind-Value = "@customer.FirstName" ></InputText>
        </div>
         <div class = "form-group row">
            <label for = "LastName" class = "col-sm-6">Last Name</label>
            <InputText id = "LastName" class = "form-control" @bind-Value = "@customer.LastName"></InputText>
        </div>
         <div class = "form-group row">
            <label for = "MiddleName" class = "col-sm-6">Middle Name</label>
            <InputText id = "MiddleName" class = "form-control" @bind-Value = "@customer.MiddleName"></InputText>
        </div>
         <div class = "form-group row">
            <label for = "FathersName" class = "col-sm-6">Father's Name</label>
            <InputText id = "FathersName" class = "form-control" @bind-Value = "@customer.FathersName"></InputText>
        </div>
        <div class = "form-group row">
            <label for = "MobileNumber" class = "col-sm-6">Mobile Number</label>
            <InputNumber id = "MobileNumber" class = "form-control" @bind-Value = "@customer.MobileNumber"></InputNumber>
        </div>
        <div class = "form-group row">
            <label for = "AadharNumber" class = "col-sm-6">Aadhar Number</label>
            <InputNumber id = "AadharNumber" class = "form-control" @bind-Value = "@customer.AadharNumber"></InputNumber>
        </div>
        <div class = "form-group row">
            <label for = "DateofBirth" class = "col-sm-6">Date Of Birth</label>
            <InputDate id = "DateofBirth" class = "form-control" @bind-Value = "@customer.DateOfBirth" ></InputDate>
        </div>
        <div class = "form-group row">
            <label for = "PermanentAddress" class = "col-sm-6">Permanent Address</label>
            <InputTextArea id = "PermanentAddress" class = "form-control" @bind-Value = "@customer.PermanentAddress"></InputTextArea>
        </div>
        <div class = "form-group row">
            <label for = "ResidentialAddress" class = "col-sm-6">Residential Address</label>
            <InputTextArea id = "ResidentialAddress" class = "form-control" @bind-Value = "@customer.ResidentialAddress" ></InputTextArea>
        </div>
        <div class = "form-group row">
            <label for = "EmailId" class = "col-sm-6">Email Id</label>
            <InputText id = "EmailId" class = "form-control" @bind-Value = "@customer.EmailId"></InputText>
        </div>
        <div class = "form-group row">
            <label for = "Occupationtype" class = "col-sm-6">Occupation Type</label>
            <InputText id = "OccupationType" class = "form-control" @bind-Value = "@customer.OccupationType"></InputText>
        </div>
        <div class = "form-group row">
            <label for = "SourceOfIncome" class = "col-sm-6">Source Of Income</label>
            <InputText id = "SourceOfIncome" class = "form-control" @bind-Value = "@customer.SourceOfIncome"></InputText>
        </div>
        <div class = "form-group row">
            <label for = "IsDebitCardRequired" class = "col-sm-6">Do you want to Debit Card?</label>
            <InputSelect @bind-Value = "@customer.IsDebitCardRequired">
                <option value="YES" >YES</option>
  <option value="NO">NO</option>
  
            </InputSelect>
        </div>
        <div class = "form-group row">
            <label for = "EnableNetBanking" class = "col-sm-6">Do you want to Enable NetBanking?</label>
            <InputSelect @bind-Value = "@customer.EnableNetBanking">
                <option value="Yes" >Yes</option>
  <option value="No">No</option>
  
            </InputSelect>
        </div>
        <div>
            <p></p>
        </div>
        <div class = "container">
            <button type = "submit" class = "btn btn-primary edit-btn">Create</button>
  </div>
        

    </EditForm>
    </div>

</div>
